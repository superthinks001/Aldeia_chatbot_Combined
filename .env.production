# ============================================
# ALDEIA CHATBOT - PRODUCTION ENVIRONMENT CONFIG
# ============================================
# IMPORTANT: This is a template. Replace all placeholder values with actual production credentials.
# NEVER commit this file with real credentials to version control!
# ============================================

# === ENVIRONMENT ===
NODE_ENV=production

# === PORTS ===
BACKEND_PORT=3001
CHATBOT_FRONTEND_PORT=3002
REBUILD_PLATFORM_PORT=3000

# === DATABASE (PostgreSQL/Supabase) ===
# IMPORTANT: Replace with your production Supabase credentials
SUPABASE_URL=https://YOUR-PROJECT-ID.supabase.co
SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY_REPLACE_THIS
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SERVICE_ROLE_KEY_REPLACE_THIS
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@db.YOUR-PROJECT-ID.supabase.co:5432/postgres

# === AUTHENTICATION (JWT) ===
# CRITICAL: Generate new secure secrets for production using: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_PRODUCTION_JWT_SECRET_MIN_64_CHARS_ULTRA_SECURE_GENERATE_WITH_OPENSSL
JWT_REFRESH_SECRET=REPLACE_WITH_PRODUCTION_REFRESH_SECRET_DIFFERENT_FROM_JWT_GENERATE_WITH_OPENSSL
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=30d

# === BACKEND URL ===
BACKEND_URL=https://api.aldeia.com

# === FRONTEND URLS ===
FRONTEND_CHAT_URL=https://chat.aldeia.com
FRONTEND_REBUILD_URL=https://rebuild.aldeia.com

# === CHROMADB (Vector Database) ===
CHROMA_HOST=chromadb-prod
CHROMA_PORT=8000
CHROMA_AUTH_TOKEN=REPLACE_WITH_SECURE_CHROMA_AUTH_TOKEN

# === REDIS (Caching) ===
REDIS_URL=redis://redis-prod:6379
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD

# === STRIPE (Billing) ===
# IMPORTANT: Use LIVE keys for production, TEST keys for staging
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_YOUR_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_LIVE_WEBHOOK_SECRET

# === GOOGLE TRANSLATE (Multilingual) ===
GOOGLE_TRANSLATE_API_KEY=REPLACE_WITH_YOUR_GOOGLE_CLOUD_API_KEY

# === MONITORING (Sentry) ===
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID
LOG_LEVEL=info
ENABLE_MONITORING=true

# === FEATURE FLAGS ===
ENABLE_VOICE_INPUT=true
ENABLE_MULTILINGUAL=true
ENABLE_BILLING=true
USE_SQLITE=false

# === CORS (Allowed Origins) ===
CORS_ORIGINS=https://chat.aldeia.com,https://rebuild.aldeia.com,https://aldeia.com

# === RATE LIMITING ===
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# === SESSION ===
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_GENERATE_WITH_OPENSSL

# === SSL/TLS ===
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# === BACKUP ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# === HEALTH CHECK ===
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ============================================
# SECURITY REMINDERS:
# ============================================
# 1. Generate new JWT secrets using: openssl rand -base64 64
# 2. Use strong, unique passwords for Redis, database
# 3. Enable SSL/TLS certificates (Let's Encrypt recommended)
# 4. Set up Sentry for error monitoring
# 5. Configure firewall rules to restrict access
# 6. Enable database backups
# 7. Use environment-specific Stripe keys (test vs live)
# 8. Rotate secrets regularly
# 9. Use secrets management (AWS Secrets Manager, HashiCorp Vault, etc.)
# 10. Never commit this file with real values to version control
# ============================================
