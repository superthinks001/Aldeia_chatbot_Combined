{
  "name": "@aldeia/backend",
  "version": "1.0.0",
  "description": "Aldeia backend API server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "db:migrate": "ts-node src/database/migrations/run-migrations.ts",
    "db:migrate:supabase": "ts-node src/database/migrate.ts",
    "db:seed": "ts-node src/database/seeds/dev-data.ts",
    "db:seed:dev": "npm run db:seed",
    "db:reset": "rm -f aldeia.db && npm run db:migrate && npm run db:seed",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:create": "node src/database/create-migration.js",
    "migrate:data": "ts-node src/database/migrate-data.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "@supabase/supabase-js": "^2.78.0",
    "@types/bcryptjs": "^2.4.6",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "chromadb": "^1.10.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.13",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
